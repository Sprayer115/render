<div id="app">
    <router-view></router-view>
</div>
<script type="module">

    import overview from "/vue/overview.js";
    import Basket from "/vue/basket.js";
    import Address from "/vue/address.js";
    import Checkout from "/vue/checkout.js";
    import Confirmation from "/vue/confirmation.js";
    import shirtcomponent from '/vue/shirt.js'


    const routes = [
        { path: '/', component: overview },
        { path: '/basket', component: Basket },
        { path: '/address', component: Address },
        { path: '/checkout', component: Checkout },
        { path: '/confirmation', component: Confirmation },
    ]

    const router = VueRouter.createRouter({
        history: VueRouter.createWebHashHistory(),
        routes, 
        parseQuery: (query) => {
            // Custom logic for parsing query parameters
            return {
                categories: query.categories, // Replace with your actual parameter name
            };
        },
    })

    // 5. Create and mount the root instance.
    const app = Vue.createApp({});
    const vuetify = Vuetify.createVuetify();
    app.component("shirt", shirtcomponent);
    app.use(router);
    app.use(vuetify);
    app.mount('#app');
</script>
