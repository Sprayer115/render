<div id="login">
  <div class="container-fluid pt-5 pb-5">
    <h1 class="text-center">Anmelden</h1>
    <div style="max-width: 450px;" class="mx-auto">
      <hr/>
      <form action="login" method="POST">
        <div class="form-group">
          <input type="email" name="emailAddress" class="form-control" placeholder="Email address" autocomplete="email" focus-first>
          <div class="invalid-feedback">Bitte geben Sie eine E-Mail Adresse ein</div>
        </div>
        <div class="form-group">
          <input name="password" type="password" class="form-control" placeholder="Password" autocomplete="current-password">
          <div class="invalid-feedback">Bitte geben Sie ihr Passwort ein.</div>
        </div>
        <span>Die Eingegebenen Daten sind nicht korrekt. Bitte überprüfen Sie Ihre Eingabe.</span>
        <div class="form-group">
          <button type="submit"class="btn-primary btn-lg btn-block">Sign in</button>
        </div>
      </form>
      <p class="text-center"><a href="/password/forgot">Passwort vergessen?</a></p>
      <p class="text-center"><a href="/signup">Neuen Account erstellen?</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
