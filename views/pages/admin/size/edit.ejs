<form class="container pt-5 pb-5" name="size" action="/admin/size/<%= size.id %>/update" method="POST" onsubmit="return validateSize()">
    <div class="form-group">
      <label class="form-label" for="name">Größe:</label>
      <input class="form-control" type="text" id="name" name="name" value="<%= size.name %>" required>
    </div>
    <div class="form-group">
      <label class="form-label" for="description">Filter:</label>
      <input class="form-control" type="text" id="filter" name="filter" placeholder="M;" value="<%= size.filter %>" required>
    </div>
    <div class="form-group">
      <label class="form-label" for="stock">Bestand</label>
      <input class="form-control" type="number" name="stock" min=0 id="stock" value="<%= size.stock %>" required>
  </div>
    <div>
      <input class="btn btn-primary" type="submit" value="Submit">
    </div>
  </form>
  
  
  