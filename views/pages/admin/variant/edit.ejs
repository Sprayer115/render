<form action="/admin/variant/<%= variant.id %>/update" method="POST">
    <div>
      <label for="name">Varianten Name:</label>
      <input type="text" id="name" name="name" value="<%= variant.name %>">
    </div>
    <div>
      <label for="description">Filter:</label>
      <input type="text" id="filter" name="filter" placeholder="blue;" value="<%= variant.filter %>">
    </div>
    <div>
        <label for="image">Bild hochladen</label>
        <input type="file" class="form-control" name="image" id="image">
    </div>
    <div>
      <input type="submit" value="Submit">
    </div>
  </form>
  
  
  