<div class="container">
    <form action="/admin/category" method="post">
        <% if (message.length>0) { %>
            <div class="mt-5 alert alert-danger"><%= message %></div>
        <% } %>
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" value="<%= name %>" class="form-control" maxlength="80" name="name">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Reihenfolge</label>
                <input type="number" value="<%= ordernumber %>" class="form-control" maxlength="2" name="ordernumber">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Filter</label>
                <input type="string" class="form-control" name="filter">
            </div>
        </div>
        <button type="submit" class="green-button mt-4">Hinzuf√ºgen</button>
    </form>
</div>