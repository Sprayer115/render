<form class="container pt-5 pb-5" name="article" action="/admin/article/<%= article.id %>/update" method="POST" onsubmit="return validateArticle()">

  <div class="form-group">
    <label class="form-label" for="name">Artikelname:</label>
    <br>
    <input class="form-control"  type="text" id="name" name="name" value="<%= article.name %>" required>
  </div>
  <div class="form-group">
    <label class="form-label" for="description">Artikelbeschreibung:</label>
    <br>
    <textarea class="form-control" id="description" name="description" required><%= article.description %></textarea>
  </div>
  <div class="form-group">
    <label class="form-label" for="price">Preis:</label>
    <br>
    <input class="form-control"  type="number" id="price" min=0.01 step=0.01 name="price" required value="<%= article.price %>">
  </div>
  <div class="form-group">
    <label class="form-label" for="description">Filter:</label>
    <br>
    <input class="form-control"  type="text" id="filter" name="filter" required value="<%= article.filter %>" placeholder="baumwolle;polo;">
  </div>
  <br>
  <!--<a  href="/article/<%=article.id %>/uploadImageForm" class="btn btn-primary">Bild Hochladen</a> -->
  <div>
    <br>
    <button class="btn btn-primary" type="submit">Fertig</button>
  </div>
  <br>
  <br>
</form>
