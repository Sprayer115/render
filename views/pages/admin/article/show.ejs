<div class="container">
  <div class="card w-100 mt-4">
    <h4 class="card-header">
      Artikel Anzeigen
    </h4>
    <div>
      <div class="row">
        <div class="col-2">
          Name
        </div>
        <div class="col-10">
          <%= article.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
          Preis
        </div>
        <div class="col-10">
          <%= article.price %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
          Beschreibung
        </div>
        <div class="col-10">
          <%= article.description %>
        </div>
      </div>

      <% if(article.articleVariants) { %>
      <div>
        <h3>Varianten</h3>
        <% article.articleVariants.forEach(function(variant){ %>
        <div class="row">
          <div class="col-2">
          </div>
          <div class="col-2">
            <h4>
                <a href="/admin/variant/<%= variant.id %>/edit">
                    <%= variant.name %>
                </a>
            </h4>
          </div>
          <div class="col-8">
            <span>
                <a class="delete-button" href="/admin/variant/<%= variant.id %>/destroy">
                    <i class="fa fa-trash icons" aria-hidden="true"></i>
                </a>
            </span>
          </div>
          <div>
              <% if(variant.variantSizes) { %>
              <div>
                <h5>Größen</h5>
                <% variant.variantSizes.forEach(function(size){ %>
                <div class="row">
                  <div class="col-4"></div>
                  <div class="col-2">
                    <a class="show-button" href="/admin/size/<%= size.id %>/edit">
                        <%= size.name %>
                    </a>
                  </div>
                  <div class="col-2">
                    <%= size.stock %>
                  </div>
                  <div class="col-4">
                    <span>
                        <a class="delete-button" href="/admin/size/<%= size.id %>/delete">
                            <i class="fa fa-trash icons" aria-hidden="true"></i>
                        </a>
                    </span>
                  </div>
                </div>
                <% }); %>
              </div>
              <% } %>
          </div>
          <% }); %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
