<form class="container pt-5 pb-5" name="article" action="/admin/article" method="POST" onsubmit="return validateArticle()">
  <div class="form-group">
    <label class="form-label" for="name">Article Name:</label>
    <input class="form-control" type="text" id="name" name="name" required>
  </div>
  <div class="form-group">
    <label class="form-label" for="description">Article Description:</label>
    <textarea class="form-control" id="description" name="description" required></textarea>
  </div>
  <div class="form-group">
    <label class="form-label" for="price">Preis:</label>
    <input class="form-control" type="number" id="price" min=0.01 step=0.01 name="price" required>
  </div>
  <div class="form-group">
    <label class="form-label" for="description">Filter:</label>
    <input class="form-control" type="text" id="filter" name="filter" placeholder="baumwolle;polo;" required>
  </div>
  <div>
    <input class="btn btn-primary" type="submit" value="Anlegen">
  </div>
</form>

