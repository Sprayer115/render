<form action="/admin/article" method="POST">
  <div>
    <label for="name">Article Name:</label>
    <input type="text" id="name" name="name" required>
  </div>
  <div>
    <label for="description">Article Description:</label>
    <textarea id="description" name="description" required></textarea>
  </div>
  <div>
    <label for="price">Preis:</label>
    <input type="number" id="price" min=0.01 step=0.01 name="price" required>
  </div>
  <div>
    <label for="description">Filter:</label>
    <input type="text" id="filter" name="filter" placeholder="baumwolle;polo;" required>
  </div>
  <div>
    <input type="submit" value="Anlegen">
  </div>
</form>


